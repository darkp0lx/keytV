*
  font-family: 'Roboto', sans-serif
  margin: 0
  padding: 0
.container-header
  display: flex
  justify-content: space-between
  align-items: center
  .contenedor-logo
    img 
      width: 150px
  .contenedor-nav
    width: 40%
    ul
      display: flex
      justify-content: space-evenly
      li
        color: #233142
        list-style: none
        cursor pointer
      li:hover
        color:#4f9da6 
        font-weight: 500 
  .contenedor-extra
    width: 10%
    display: flex
    justify-content: space-evenly
    i
      color: #233142
      cursor pointer
    i:hover
      color:#4f9da6  
  






























.item
  display: none
  padding: 20px
  align-items: center
  animation aparecer 1.2s forwards
  .info
    padding: 20px
    p
      padding: 20px
  img
    width 500px
    height 500px
.item:first-child
  display: flex
#music
  display: flex
  justify-content: space-between
  background #F8EFEA
  padding: 0
  .info    
    width: 70%;
    margin-right: -100px;
    position: relative;  
    h2
      color: #fff
      text-shadow: 2px 2px black;
      font-size: 80px
      text-align: center
      font-family: "Finger Paint"
.container-instagram_feed
  display: flex
  margin-top: 30px
  margin-left: 20px
  height 100vh
  .block-one
    width 50%
    margin-right: 70px
    h2
      font-size: 40px
      text-align: center
      font-family: 'Lilita One', cursive;
    p
      text-align: center
    .container-img
      width: 100%
      .container
        display: flex
        justify-content: center
        .img
          margin: 10px
          width: 25%
          height 25vh
          img
            width 100%
            height 100%
  .block-two
    width 40%
    .list-item
      display: flex
      justify-content: space-around
      align-items: center
      margin-top: 40px
      .contenedor-fecha
        padding: 10px 15px;
        border-radius: 5px
        justify-content: center
        -webkit-box-shadow: -2px 4px 39px 3px rgba(105,32,184,1);
        -moz-box-shadow: -2px 4px 39px 3px rgba(105,32,184,1);
        box-shadow: 0px 0px 15px -4px #6920b8;
        p
          text-align: center
          font-weight: bold
        span
          text-align: center
          color:#8925EF
          font-weight: bold
          font-size: 20px
          font-family: "Long Cang"
      .contenedor-titulo
        h3
          font-family "Lilita One"
      .contenedor-boton
        cursor: pointer
        border-radius: 10px
        padding: 20px
        border: 1px solid #8925EF
        a
          color: #8925EF
          font-family: 'Roboto', cursive;
          font-weight: bold   
          text-decoration: none
      .contenedor-boton:hover
        border: 0px
        -webkit-box-shadow: -2px 4px 39px 3px rgba(105,32,184,1);
        -moz-box-shadow: -2px 4px 39px 3px rgba(105,32,184,1);
        box-shadow: 0px 0px 15px -4px #6920b8;
.arrows
  display: flex
  justify-content: space-between
  position: relative
  top:-50vh
  font-size: 70px
  text-align: center
  div
    color:#111
    margin:0 30px
    transition: all 0.12s
    font-size: 70px
  div:hover
    font-size: 80px
    color:#555
    margin-top: -7px
.vinil
  width: 100% 
  display: flex
  align-items: center
  justify-content: space-evenly
  background #e2e7e1
  .info
    width: 40vw
    text-align: center
    #head-vinil
      font-family: 'Long Cang', cursive; 
      font-size: 20px
      font-weight: bold
      color: #6A20B8
  .img
    width 50vw
    display: flex
    justify-content: center
    img
      margin: 0
      height 100vh
      width: 100%
      position: relative;
  .botones-vinil
    display: flex
    justify-content: center
    .fab
      font-size: 50px
      color: #6A20B8
    .boton-spotify
      cursor pointer
      border-radius: 10px
      padding: 10px
      margin-right: 15px
      display: flex
      align-items: center
      border: solid 2px #6A20B8
      .text-boton
        h3
          padding: 5px
          margin: 0
          color: #6A20B8

        p
          padding: 0 5px 0 5px
          margin: 0
          font-size: 12px
          color: #6A20B8

      
    .boton-itunes
      cursor pointer
      color:#6A20B8
      border-radius: 10px
      padding: 10px
      display: flex
      align-items: center
      border: solid 2px #6A20B8
      .text-boton
        
        h3
          margin: 0
          color: #6A20B8
        p
          padding: 0 5px 0 5px
          margin: 0
          color: #6A20B8
          font-size: 12px


@keyframes aparecer
  0%
    opacity 0.4
  100%
    opacity 1